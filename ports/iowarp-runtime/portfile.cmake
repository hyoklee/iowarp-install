    shared BUILD_SHARED_LIBS
    task CHIMAERA_TASK_DEBUG    
    test BUILD_TESTS
    zmq BUILD_ZeroMQ_TESTS
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
    OPTIONS
    ${FEATURE_OPTIONS}
)

vcpkg_cmake_install()

